@model IEnumerable<_23DH114270_MyStore.Models.Category>
@* Chỉnh hiện danh mục *@
<style>
    .div-cate {
        margin: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 50px;
    }

    #div-u {
        padding: 0;
    }

    .nav-item {
        margin: 5px 15px;
        border: 1px solid #ded9d9;
        border-radius: 5px;
        transition: all 0.3s;
    }

        .nav-item:hover {
            border-color: #b0b0b0;
        }

        .nav-item a {
            color: black;
            text-decoration: none;
            padding: 10px 20px;
            display: block;
        }

            .nav-item a:hover {
                color: #808080;
            }
</style>
<div>
    <ul style="list-style-type: none;" id="div-u" class="nav justify-content-evenly">
        @{
            foreach (var item in Model)
            {
                <li class="nav-item div-cate">
                    @Html.ActionLink(item.CategoryName, "SanPham", "Products", new { category = item.CategoryID }, new { @class = "" })
                </li>
            }
        }
    </ul>
</div>
