@model IEnumerable<_23DH114270_MyStore.Models.Product>
@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
<h2> Sách </h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card mx-3" style="width: 14rem;">
            <img src="@Html.DisplayFor(modelItem => item.ProductImage)" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.ProductPrice) đ</p>
                <div class="d-flex justify-content-center" >
                    <button href="#" class="mx-1 btn btn-primary"><i class="bi bi-bag-check"></i></button>
                    <a class="btn btn-primary" href="/Products/ChiTietSanPham/@item.ProductID"><i class="bi bi-exclamation-circle"></i></a>
                </div>
            </div>
        </div>
    }
</div>
