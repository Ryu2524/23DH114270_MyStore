@model _23DH114270_MyStore.Models.Product

@{
    ViewBag.Title = "Xóa Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutADM.cshtml";
}

<h2 class="text-center my-4">XÓA SẢN PHẨM</h2>

<h3 class="text-center">Bạn có chắc chắn muốn xóa sản phẩm này không?</h3>
<div class="container">

    <hr />
    <h4 class="text-center">Thông tin sản phẩm</h4>
    <dl class="row">
        <dt class="col-sm-3">Tên sản phẩm</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>

        <dt class="col-sm-3">Mô tả</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductDescription)</dd>

        <dt class="col-sm-3">Giá tiền</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductPrice) đ</dd>

        <dt class="col-sm-3">Hình ảnh</dt>
        <dd class="col-sm-9" style="height:100px"><img src="@Html.DisplayFor(model => model.ProductImage)" class="img-fluid" alt="Hình ảnh sản phẩm" /></dd>

        <dt class="col-sm-3">Thể loại</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="text-center mt-4">
            <input type="submit" value="Xóa" class="btn btn-danger mx-2" />
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary mx-2" })
        </div>
    }
</div>
