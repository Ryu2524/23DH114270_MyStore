@model IEnumerable<_23DH114270_MyStore.Models.Category>

@{
    ViewBag.Title = "Danh Sách Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutADM.cshtml";
}

<h2 class="text-center my-4">DANH SÁCH DANH MỤC</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Tên danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-warning btn-sm mx-1" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID }, new { @class = "btn btn-primary btn-sm mx-1" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger btn-sm mx-1" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mt-3">
    @Html.ActionLink("Thêm danh mục mới", "Create", null, new { @class = "btn btn-success" })
</div>
