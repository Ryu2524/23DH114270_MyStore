@model IEnumerable<_23DH114270_MyStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutADM.cshtml";
}

<h2>Danh sách danh mục </h2>

<table class="table">
    <tr>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.CategoryID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Thêm danh mục mới", "Create")
</p>