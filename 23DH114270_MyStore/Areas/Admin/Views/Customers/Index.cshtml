@model IEnumerable<_23DH114270_MyStore.Models.Customer>

@{
    ViewBag.Title = "Danh Sách Người Dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutADM.cshtml";
}

<h2 class="text-center my-4">DANH SÁCH NGƯỜI DÙNG</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Tên người dùng</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Mật khẩu</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                <td>@Html.DisplayFor(modelItem => item.CustomerPhone)</td>
                <td>@Html.DisplayFor(modelItem => item.CustomerEmail)</td>
                <td>@Html.DisplayFor(modelItem => item.CustomerAddress)</td>
                <td>@Html.DisplayFor(modelItem => item.User.Password)</td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.CustomerID }, new { @class = "btn btn-primary btn-sm mx-1" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.CustomerID }, new { @class = "btn btn-primary btn-sm mx-1" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.CustomerID }, new { @class = "btn btn-primary btn-sm mx-1" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mt-3">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</div>
