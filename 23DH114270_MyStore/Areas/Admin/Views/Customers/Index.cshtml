@model IEnumerable<_23DH114270_MyStore.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutADM.cshtml";
}

<h2>NGƯỜI DÙNG</h2>

<table class="table">
    <tr>
        <th>
            Tên người dùng
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Mật khẩu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Password)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.CustomerID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.CustomerID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CustomerID })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>