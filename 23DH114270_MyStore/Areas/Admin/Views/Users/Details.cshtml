@model _23DH114270_MyStore.Models.User

@{
    ViewBag.Title = "Chi Tiết Người Dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutADM.cshtml";
}

<h2 class="text-center my-4">CHI TIẾT NGƯỜI DÙNG</h2>

<div class="container">
    <h4 class="text-center">Thông tin người dùng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Mật khẩu</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>

        <dt class="col-sm-3">Vai trò</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.UserRole)</dd>
    </dl>
</div>

<div class="text-center mt-3">
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.Username }, new { @class = "btn btn-primary mx-2" }) |
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary mx-2" })
</div>
