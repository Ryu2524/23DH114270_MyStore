@model IEnumerable<_23DH114270_MyStore.Models.User>

@{
    ViewBag.Title = "Danh Sách Người Dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutADM.cshtml";
}

<h2 class="text-center my-4">DANH SÁCH NGƯỜI DÙNG</h2>



<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Tài Khoản</th>
            <th>Mật khẩu</th>
            <th>Vai trò</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                <td>@Html.DisplayFor(modelItem => item.UserRole)</td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Username }, new { @class = "btn btn-primary btn-sm mx-1" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Username }, new { @class = "btn btn-primary btn-sm mx-1" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Username }, new { @class = "btn btn-primary btn-sm mx-1" })
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center mb-4">
    @Html.ActionLink("Thêm Người Dùng Mới", "Create", null, new { @class = "btn btn-primary" })
</div>